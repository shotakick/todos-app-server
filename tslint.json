{
  "rulesDirectory": ["tslint-plugin-prettier"],
  "extends": [
    "tslint-config-airbnb",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "prettier": [
      true,
      {
        "singleQuote": true,
        "trailingComma": "all",
        "printWidth": 100
      }
    ],
    "ordered-imports": true,
    "trailing-comma": false
  }
}
